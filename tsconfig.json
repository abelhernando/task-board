{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "exclude": ["node_modules"],
  "include": [
    "env.d.ts",
    "src/**/*.*",
    "src/**/*.vue",
    "src/**/*.ts",
    "tests/**/*",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "outDir": "./out",
    "types": ["node", "jest", "@types/jest"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
